				text:"среда обитания"
			TextInput:
				id: environment
			ColorfulLabel:
				background_color: 0, 0, 1, 1
				text:"надзиратель"
			TextInput:
				id: supervisor
			ColorfulLabel:
				background_color: 0.4, 0, 1, 1
				text:"ветеринар"
