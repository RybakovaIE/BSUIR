#:import sp kivy.metrics.sp

<WindowManager>:
	MenuScreen:
	AnimalsScreen:
		id: animals_screen
	BirdsScreen:
		id: birds_screen
	ReptilesScreen:
		id: reptiles_screen
	WorkersScreen:
		id: workers_screen
	CouplesScreen:
		id: couples_screen
	DietsScreen:
		id: diets_screen
	EnvironmentsScreen:
		id: environments_screen

<DietsScreen>
	name:'diets'
	canvas.before:
        Color:
            rgba: hex("#FFFFFF")
        Rectangle:
            size: self.size
            pos: self.pos
	ActionBar:
	
	BoxLayout:
		orientation:'vertical'
		pos_hint: {'top': 0.92}
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, 0.05
			AnchorLayout:
				pos_hint: {'center_x': 0.27, 'center_y': 0.5}
				size_hint: 0.54, 1
				TextInput:
					id: search
					hint_text: 'поиск'
			AnchorLayout:
				pos_hint: {'center_x': 0.64, 'center_y': 0.5}
				size_hint: 0.2, 1
				Button:
					theme_text_color: 'Custom'
					color: 0,0,0,1
					font_name: 'Comic'
					text: 'найти'
					background_normal: ''
					background_color: 1, 0.1, 1, 0.9
					on_press:
						app.load_table('diets', content = root.search())
			GridLayout:
				cols: 4
				Button:
					theme_text_color: 'Custom'
					color: 0,0,0,1
					font_name: 'Comic'
					text: 'изменить'
					background_normal: ''
					background_color: 0.75, 0.1, 1, 0.9
					on_press: 
						root.alter()
				Button:
					theme_text_color: 'Custom'
					color: 0,0,0,1
					font_name: 'Comic'
					text: 'удалить'
					background_normal: ''
					background_color: 0.5, 0.1, 1, 0.9
					on_press:
						root.show_delete_popup()
				Button:
					theme_text_color: 'Custom'
					color: 0,0,0,1
					font_name: 'Comic'
					text: 'добавить'
					background_normal: ''
					background_color: 0, 0.4, 1, 0.9
					on_press:
						root.show_add_popup()
		AnchorLayout:
			id: data_layout
			pos_hint:{'center_x':.5,'center_y':.5}
			size_hint: 1, 0.7


