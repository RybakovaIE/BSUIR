<MenuScreen>:
	name:'table'
	canvas.before:
    	Color:
            rgba: hex("#00ebd8")
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
		spacing: 5
		orientation:'vertical'
		MainWidget:


<ActionBar>:
    pos_hint: {'top':1}
    ActionView:
		canvas.before:
			Color:
				rgba: 1, 1, 1, 1
			Rectangle:
				pos: self.pos
				size: self.size
        use_separator: True
        ActionPrevious:
            title: 'tables'
            with_previous: False
				
        ActionButton:
		    theme_text_color: 'Custom'
			color: 0,0,0,1
			font_name: 'Comic'
            text: 'животные'
			canvas.before:
				Color:
					rgba: 1, 0.1, 0.2, 0.8
				Rectangle:
					pos: self.pos
					size: self.size	
			on_press: 
				app.change_screen('animals')
				app.load_table('animals')
			
		ActionButton:
		    theme_text_color: 'Custom'
			color: 0, 0, 0, 1
			font_name: 'Comic'
			canvas.before:
				Color:
					rgba: 1, 0.35, 0, 0.8
				Rectangle:
					pos: self.pos
					size: self.size	
            text: 'птицы'
            on_press: 
				app.change_screen('birds')
				app.load_table('birds')

		ActionButton:
		    theme_text_color: 'Custom'
			color: 0, 0, 0, 1
			font_name: 'Comic'
			canvas.before:
				Color:
					rgba: 1, 0.65, 0, 0.8
				Rectangle:
					pos: self.pos
					size: self.size	
            text: 'рептилии'
            on_press: 
				app.change_screen('reptiles')
				app.load_table('reptiles')

		ActionButton:
		    theme_text_color: 'Custom'
			color: 0, 0, 0, 1
			font_name: 'Comic'
			canvas.before:
				Color:
					rgba: 1, 1, 0, 0.8
				Rectangle:
					pos: self.pos
					size: self.size	
            text: 'среды обитания'
            on_press: 
				app.change_screen('environments')
				app.load_table('environments')

        ActionButton:
		    theme_text_color: 'Custom'
			color: 0, 0, 0, 1
			font_name: 'Comic'
			canvas.before:
				Color:
					rgba: 0.2, 1, 0, 0.8
				Rectangle:
					pos: self.pos
					size: self.size	
            text: 'диеты'
            on_press: 
				app.change_screen('diets')
				app.load_table('diets')
				
        ActionButton:
		    theme_text_color: 'Custom'
			color: 0, 0, 0, 1
			font_name: 'Comic'
			canvas.before:
				Color:
					rgba: 0, 0.8, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size	
            text: 'рабочие'
            on_press: 
				app.change_screen('workers')
				app.load_table('workers')

		ActionButton:
		    theme_text_color: 'Custom'
			color: 0, 0, 0, 1
			font_name: 'Comic'
			canvas.before:
				Color:
					rgba: 0, 0.6, 1, 0.9
				Rectangle:
					pos: self.pos
					size: self.size	
            text: 'женатые'
            on_press: 
				app.change_screen('couples')
				app.load_table('couples')
		


<MainWidget>	
	id: main
	GridLayout:
		spacing:0,5
		padding: 20
		cols: 1
	Button:
	    background_normal: ''
		background_color: 0.5, 0.1, 0.8, 0.7
		size_hint: 1, 1
		pos_hint:{'center_x':.5,'center_y':.5}
		text:"press any key to continue"	
		font_name: 'Comic'
		font_size: 50
		on_press:		
			app.load_table('animals')
			app.change_screen('animals')

<ColorfulLabel>:
	background_normal: ''
	background_color: 1, 0.5, 0, 0.5
	theme_text_color: 'Custom'
	color: 0,0,0,1
	font_name: 'Comic'
	canvas.before:
		Color:
			rgba: root.background_color
		Rectangle:
			pos: self.pos
			size: self.size	

<AddAnimalPopup>:
	title: 'информация нового животного'
	size_hint: 0.6, 0.55
	title_font: 'Comic'
	title_align: 'center'
	
	BoxLayout:
		cols: 1
		orientation: 'vertical'
		GridLayout:
			spacing:5
			cols: 2
			rows: 8
			row_force_default: True
			row_default_height: 30
			row_default_weight: 20
